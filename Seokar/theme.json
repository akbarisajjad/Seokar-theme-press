{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "color": {
      "palette": [
        {
          "slug": "primary",
          "color": "#1A73E8",
          "name": "Primary"
        },
        {
          "slug": "secondary",
          "color": "#FF5722",
          "name": "Secondary"
        },
        {
          "slug": "background",
          "color": "#FFFFFF",
          "name": "Background"
        },
        {
          "slug": "text",
          "color": "#333333",
          "name": "Text"
        }
      ],
      "gradients": [
        {
          "slug": "primary-gradient",
          "gradient": "linear-gradient(135deg, #1A73E8, #FF5722)",
          "name": "Primary Gradient"
        }
      ],
      "custom": false,
      "defaultPalette": true
    },
    "typography": {
      "fontFamilies": [
        {
          "slug": "primary",
          "fontFamily": "'IranSans', sans-serif",
          "name": "Primary Font"
        },
        {
          "slug": "secondary",
          "fontFamily": "'Vazir', sans-serif",
          "name": "Secondary Font"
        }
      ],
      "fontSizes": [
        {
          "slug": "small",
          "size": "12px",
          "name": "Small"
        },
        {
          "slug": "normal",
          "size": "16px",
          "name": "Normal"
        },
        {
          "slug": "large",
          "size": "24px",
          "name": "Large"
        },
        {
          "slug": "x-large",
          "size": "36px",
          "name": "Extra Large"
        }
      ],
      "customFontSize": true,
      "customLineHeight": true
    },
    "spacing": {
      "padding": true,
      "margin": true,
      "blockGap": true,
      "units": ["px", "em", "rem", "%"]
    },
    "custom": {
      "spacing": {
        "small": "8px",
        "medium": "16px",
        "large": "32px"
      },
      "border": {
        "radius": "4px"
      }
    },
    "layout": {
      "contentSize": "1200px",
      "wideSize": "1600px"
    },
    "border": {
      "radius": true,
      "width": true
    },
    "blocks": {
      "core/paragraph": {
        "typography": {
          "fontSize": "normal",
          "lineHeight": "1.6"
        },
        "color": {
          "text": "var(--wp--preset--color--text)"
        }
      },
      "core/heading": {
        "typography": {
          "fontSize": "x-large",
          "fontFamily": "primary"
        },
        "color": {
          "text": "var(--wp--preset--color--primary)"
        }
      },
      "core/button": {
        "border": {
          "radius": "4px"
        },
        "color": {
          "background": "var(--wp--preset--color--primary)",
          "text": "#FFFFFF"
        },
        "typography": {
          "fontSize": "normal"
        },
        "spacing": {
          "padding": {
            "top": "12px",
            "right": "24px",
            "bottom": "12px",
            "left": "24px"
          }
        }
      }
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--background)",
      "text": "var(--wp--preset--color--text)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--primary)",
      "fontSize": "var(--wp--preset--font-size--normal)"
    },
    "elements": {
      "button": {
        "color": {
          "background": "var(--wp--preset--color--primary)",
          "text": "#FFFFFF"
        },
        "border": {
          "radius": "4px"
        },
        "spacing": {
          "padding": {
            "top": "10px",
            "bottom": "10px",
            "left": "20px",
            "right": "20px"
          }
        }
      },
      "h1": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--x-large)"
        }
      },
      "h2": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--large)"
        }
      }
    },
    "spacing": {
      "padding": {
        "top": "16px",
        "bottom": "16px"
      }
    }
  }
}
